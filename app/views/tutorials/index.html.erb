

<table class="table table-striped">
  
<% @tutorials.each do |tutorial| %>

    <tr>

    

<!--<td><%= image_tag tutorial.image_url(:thumb) if tutorial.image? %></td>      -->

<div class="details">
<td><h4><%= link_to tutorial.title, tutorial_path(tutorial) %></h4>
</div>
<p class="exc"><%= tutorial.outline.html_safe %></p>
<p class="manage">
   Successfully Completed:</b><%= pluralize tutorial.reputation_for(:votes).to_i, "times" %> | Tutorial by <%= tutorial.user.username %> | Tags: <% tutorial.tags.any? %>
  <% tutorial.tags.each do |tag| %>
  <%= link_to tag.name, tagged_url(:tag => tag.name) %>
<% end %> | Working Demo: <%= link_to tutorial.website, tutorial.website %>

</td>
      
<td> <% if current_user.present? && tutorial.editor?(current_user) %>
          <%= link_to "Edit", edit_tutorial_path(tutorial), :class => "btn" %>
          <%= link_to "Delete", tutorial_path(tutorial), :method => "delete", :class => "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>